<h1>New Consumption</h1>

<%= form_with(model: @consumption, local: true) do |form| %>
  <% if @consumption.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@consumption.errors.count, "error") %> prohibited this consumption from being saved:</h4>
      <ul>
        <% @consumption.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :date, class: "form-label" %>
    <%= form.date_field :date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :food_name, class: "form-label" %>
    <%= form.text_field :food_name, class: "form-control" %>
  </div>

   <div class="form-group">
    <%= form.label :meal_type, class: "form-label" %>
    <%= form.select :meal_type, ["Breakfast", "Lunch", "Dinner", "Snack"], {}, class: "form-control" %>
  </div>

   <div class="form-group">
    <%= form.label :calories, class: "form-label" %>
    <%= form.number_field :calories, class: "form-control"%>
  </div>

    <div class="form-group">
    <%= form.label :macros, class: "form-label" %>
    <%= form.text_area :macros, class: "form-control" %>
  </div>

  <div class="form-group mt-4">
    <%= form.submit "Save Food", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to 'Back', consumptions_path, class: "btn btn-secondary" %>
