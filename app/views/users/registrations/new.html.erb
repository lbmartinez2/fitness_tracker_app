<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :age %>
    <%= f.number_field :age %>
  </div>

  <div class="field">
    <%= f.label :sex %>
    <%= f.text_field :sex %>
  </div>

  <div class="field">
    <%= f.label :birthday %>
    <%= f.date_select :birthday %>
  </div>

  <div class="field">
    <%= f.label :height %>
    <%= f.number_field :height %>
  </div>

  <div class="field">
    <%= f.label :weight %>
    <%= f.number_field :weight %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :target_weight %>
    <%= f.number_field :target_weight %>
  </div>

  <div class="field">
    <%= f.label :target_date %>
    <%= f.date_select :target_date %>
  </div>

  <div class="field">
    <%= f.label :exercise_goals %>
    <%= f.select :exercise_goals, options_for_select([['Lift Heavier', 0], ['Get Stronger', 1], ['Improve Your Mobility', 2], ['Adhere to Movement Streak', 3], ['Weight Loss', 4], ['Get Fit', 5], ['Run a Marathon', 6], ['Sign Up for a Challenge', 7], ['Try a New Class', 8]]) %>
  </div>

  <div class="field">
    <%= f.label :current_activity_level %>
    <%= f.radio_button :current_activity_level, 'Sedentary' %>
    <%= f.label :current_activity_level_sedentary, 'Sedentary' %>
    <%= f.radio_button :current_activity_level, 'Low Active' %>
    <%= f.label :current_activity_level_low_active, 'Low Active' %>
    <%= f.radio_button :current_activity_level, 'Active' %>
    <%= f.label :current_activity_level_active, 'Active' %>
    <%= f.radio_button :current_activity_level, 'Very Active' %>
    <%= f.label :current_activity_level_very_active, 'Very Active' %>
  </div>

  <div class="field">
    <%= f.label :full_time_job %>
    <%= f.radio_button :full_time_job, true %>
    <%= f.label :full_time_job_yes, 'Yes' %>
    <%= f.radio_button :full_time_job, false %>
    <%= f.label :full_time_job_no, 'No' %>
  </div>

  <div class="field">
    <%= f.label :weight_loss_reason %>
    <%= f.select :weight_loss_reason, options_for_select([['Health', 'Health'], ['Aesthetic', 'Aesthetic'], ['Work', 'Work']]) %>
  </div>

  <div class="field">
    <%= f.label :subscribe_to_updates %>
    <%= f.radio_button :subscribe_to_updates, true %>
    <%= f.label :subscribe_to_updates_yes, 'Yes' %>
    <%= f.radio_button :subscribe_to_updates, false %>
    <%= f.label :subscribe_to_updates_no, 'No' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
