<h2 class="mb-4 mt-3">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'card p-4' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :age, class: 'form-label' %>
    <%= f.number_field :age, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :sex, class: 'form-label' %>
    <%= f.select :sex, options_for_select([["Male", "male"], ["Female", "female"], ["Other", "other"]]), {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :birthday, class: 'form-label' %>
    <%= f.date_select :birthday, start_year: 1970, end_year: Date.today.year, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :height, class: 'form-label' %>
    <%= f.number_field :height, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :weight, class: 'form-label' %>
    <%= f.number_field :weight, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email, class: 'form-label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'form-label' %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: 'form-label' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :target_weight, class: 'form-label' %>
    <%= f.number_field :target_weight, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :target_date, class: 'form-label' %>
    <%= f.date_select :target_date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :exercise_goals, class: 'form-label' %>
    <%= f.select :exercise_goals, options_for_select([['Lift Heavier', 0], ['Get Stronger', 1], ['Improve Your Mobility', 2], ['Adhere to Movement Streak', 3], ['Weight Loss', 4], ['Get Fit', 5], ['Run a Marathon', 6], ['Sign Up for a Challenge', 7], ['Try a New Class', 8]]), {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :current_activity_level, class: 'form-label' %>
    <div class="form-check">
      <%= f.radio_button :current_activity_level, 'Sedentary', id: 'activity_level_sedentary', class: 'form-check-input' %>
      <%= f.label :current_activity_level_sedentary, 'Sedentary', class: 'form-check-label' %>
    </div>
    <div class="form-check">
      <%= f.radio_button :current_activity_level, 'Low Active', id: 'activity_level_low_active', class: 'form-check-input' %>
      <%= f.label :current_activity_level_low_active, 'Low Active', class: 'form-check-label' %>
    </div>
    <div class="form-check">
      <%= f.radio_button :current_activity_level, 'Active', id: 'activity_level_active', class: 'form-check-input' %>
      <%= f.label :current_activity_level_active, 'Active', class: 'form-check-label' %>
    </div>
    <div class="form-check">
      <%= f.radio_button :current_activity_level, 'Very Active', id: 'activity_level_very_active', class: 'form-check-input' %>
      <%= f.label :current_activity_level_very_active, 'Very Active', class: 'form-check-label' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :full_time_job, class: 'form-label' %>
    <div class="form-check">
      <%= f.radio_button :full_time_job, true, id: 'full_time_job_yes', class: 'form-check-input' %>
      <%= f.label :full_time_job_yes, 'Yes', class: 'form-check-label' %>
    </div>
    <div class="form-check">
      <%= f.radio_button :full_time_job, false, id: 'full_time_job_no', class: 'form-check-input' %>
      <%= f.label :full_time_job_no, 'No', class: 'form-check-label' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :weight_loss_reason, class: 'form-label' %>
    <%= f.select :weight_loss_reason, options_for_select([['Health', 'Health'], ['Aesthetic', 'Aesthetic'], ['Work', 'Work']]), {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :subscribe_to_updates, class: 'form-label' %>
    <div class="form-check">
      <%= f.radio_button :subscribe_to_updates, true, id: 'subscribe_to_updates_yes', class: 'form-check-input' %>
      <%= f.label :subscribe_to_updates_yes, 'Yes', class: 'form-check-label' %>
    </div>
    <div class="form-check">
      <%= f.radio_button :subscribe_to_updates, false, id: 'subscribe_to_updates_no', class: 'form-check-input' %>
      <%= f.label :subscribe_to_updates_no, 'No', class: 'form-check-label' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit "Sign up", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
